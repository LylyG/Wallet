<p id="notice"><%= notice %></p>

<h1>My Wallet: Personal Finances App</h1>

<h2>Your Dashboard</h2>

<h4>Current Balance: <%=@balance%></h4>
<p><%= link_to 'Add a transaction', new_bank_path %></p>
<p><%= link_to 'List of transactions', new_bank_path %></p>


<table>
  <thead>
    <tr>
      <th>Credits</th>
      <th>Debits</th>
      <th>Recipient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @banks.each do |bank| %>
      <tr>
        <td><%= bank.credits %></td>
        <td><%= bank.debits %></td>
        <td><%= bank.recipient %></td>
        <td><%= link_to 'Show', bank %></td>
        <td><%= link_to 'Edit', edit_bank_path(bank) %></td>
        <td><%= link_to 'Destroy', bank, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
